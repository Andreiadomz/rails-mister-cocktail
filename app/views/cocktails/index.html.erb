<body>
  <h1 class="text-center"> <%=@cocktails.length %> super amazing mocktails </h1>

  <div class="container">
    <div class="row">

      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">

          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2 ><%= cocktail.name %></h2>
            </div>
            <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/andreiadomz">
            <%= link_to 'Show mocktail', cocktail, class: "card-link" %>
          </div>
      </div>
      <% end  %>

    </div>
  </div>

